<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvinhkh.buseta" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/launcher_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <!-- Solve Sync Conflict -->
        <activity
            android:name=".view.dialog.RouteEtaDialog"
            android:excludeFromRecents="true"
            android:label="@string/eta"
            android:theme="@style/AppTheme.Dialog" >
        </activity>

        <!-- Preferences -->
        <activity
            android:name=".preference.SettingsActivity"
            android:label="@string/title_settings"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name=".preference.OpenSourceLicensesActivity"
            android:label="@string/open_source_license" >
            <intent-filter>
                <action android:name="com.alvinhkh.buseta.OpenSourceLicenses.OPEN"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Google Play Services AdActivity -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <!-- Services -->
        <service
            android:name=".service.CheckEtaService"
            android:enabled="true" />
        <service
            android:name=".service.UpdateSuggestionService"
            android:enabled="true" />
        <service
            android:name=".service.EtaWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:enabled="true" />

        <!-- Content Provider -->
        <provider
            android:name=".database.FavouriteProvider"
            android:authorities="com.alvinhkh.buseta.FavouriteProvider"
            android:exported="true" />

        <!-- Broadcast Receiver -->
        <receiver android:name=".view.EtaWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alvinhkh.buseta.ETA_UPDATED" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_eta_info" />
        </receiver>

    </application>

</manifest>
